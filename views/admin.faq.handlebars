<div class="container">
    <div class="row">
        <div class="col-md-12">
            <h1>Admin Page</h1>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <h3>Add FAQ</h3>
            <form method="post" action="/create_faq" class="button-size">
                <table class="table">
                     <tr>
                         <td>Question:</td>
                         <td><input type="text" class="form-control" name="title"></td>
                     </tr>
                     <tr>
                         <td>Answer: </td>
                         <td><textarea class="form-control" rows="3" name="description"></textarea></td>
                     </tr>
                     <tr>
                         <td></td>
                         <td><button class="btn btn-default" type="submit" >Add Resource</button></td>
                     </tr>
                 </table>
            </form>

        </div>
    </div>


    <h3>FAQ</h3>
    <table class="table">
        <thead>
        <tr>
            <th>Questions</th>
            <th>Answers</th>
        </tr>
        </thead>
        <tbody>
        {{#each faqTable}}
            <tr>
                <td>{{this.questions}}</td>
                <td>{{this.answers}}</td>
            </tr>
        {{/each}}
        <tbody>
    </table>




